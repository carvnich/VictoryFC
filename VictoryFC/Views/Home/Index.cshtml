@model VictoryFC.Models.DynamicHomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="card border shadow">
    <!-- Hero Section with Game Countdown -->
    <div class="card-body bg-primary text-white position-relative overflow-hidden team-form-@Model.TeamFormClass" style="background-image: url('https://images.unsplash.com/photo-1510526292299-20af3f62d453?q=80&w=2028&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover; background-position: center;">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark" style="opacity: 0.5;"></div>
        <div class="position-relative">
            <div class="row align-items-center h-100">
                <div class="col-lg-6">
                    <div class="text-center py-4">
                        @if (Model.NextGame != null)
                        {
                            <h1 class="mb-4 fw-bold">@Model.NextGame.HomeTeam vs @Model.NextGame.AwayTeam</h1>
                            <div class="d-flex justify-content-center align-items-start gap-2 mb-4" id="countdown" data-target="@Model.NextGameCountdownTarget">
                                <div class="text-center"><div class="display-5 fw-bold" id="days">00</div><small>Days</small></div>
                                <div class="display-6 fw-bold">:</div>
                                <div class="text-center"><div class="display-5 fw-bold" id="hours">00</div><small>Hours</small></div>
                                <div class="display-6 fw-bold">:</div>
                                <div class="text-center"><div class="display-5 fw-bold" id="minutes">00</div><small>Minutes</small></div>
                                <div class="display-6 fw-bold">:</div>
                                <div class="text-center"><div class="display-5 fw-bold" id="seconds">00</div><small>Seconds</small></div>
                            </div>
                            <div class="mb-3">
                                <p class="mb-2 fs-5"><i class="bi bi-calendar me-2"></i>@Model.NextGame.FormattedDate at @Model.NextGame.FormattedTime</p>
                                <p class="mb-2"><i class="bi bi-geo-alt me-2"></i>@Model.NextGame.Field</p>
                                <p class="mb-0"><small>@Model.NextGameLocation</small></p>
                            </div>
                        }
                        else
                        {
                            <h1 class="mb-4 fw-bold">Season Complete!</h1>
                            <p class="fs-4">Thank you for your support this season!</p>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="p-4">
                        @if (Model.NextGame != null)
                        {
                            <div class="bg-white rounded shadow-sm p-2">
                                <div id="map" class="rounded" style="height: 300px; width: 100%;" data-location="@Model.NextGameLocation" data-field="@Model.NextGame.Field"></div>
                            </div>
                        }
                        else
                        {
                            <div class="bg-white rounded shadow-sm p-3">
                                <h5 class="text-dark mb-3"><i class="bi bi-trophy me-2"></i>Season Stats</h5>
                                <div class="row text-center text-dark">
                                    <div class="col-3"><div class="fw-bold fs-4 text-success">@Model.SeasonStats.Wins</div><small>Wins</small></div>
                                    <div class="col-3"><div class="fw-bold fs-4 text-warning">@Model.SeasonStats.Draws</div><small>Draws</small></div>
                                    <div class="col-3"><div class="fw-bold fs-4 text-danger">@Model.SeasonStats.Losses</div><small>Losses</small></div>
                                    <div class="col-3"><div class="fw-bold fs-4 text-primary">@Model.SeasonStats.Points</div><small>Points</small></div>
                                </div>
                                <div class="mt-3 text-center text-dark">
                                    <div class="fw-bold">@Model.SeasonStats.GoalsFor - @Model.SeasonStats.GoalsAgainst</div>
                                    <small>Goals For - Goals Against</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="mx-auto rounded" style="width: 90%; height: 4px; background-color: #e9ecef; opacity: 1; border: none;">

