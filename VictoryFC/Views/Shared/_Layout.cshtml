<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - VictoryFC</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/VictoryFC.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body style="font-family: 'Poppins', sans-serif; background-color: #f8f9fa;">
	<header>
		<nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3" style="border-color: #d0d7de !important;">
			<div class="container-fluid px-2 px-md-5">
				<a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/vfc_logo.jpg" alt="VictoryFC" height="72" class="rounded-circle" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link text-dark fw-medium px-2 px-lg-3" asp-controller="Home" asp-action="Index">
								<i class="bi bi-house-door d-lg-none me-1"></i>
								<span class="d-none d-lg-inline">Home</span>
								<span class="d-lg-none">Home</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark fw-medium px-2 px-lg-3" href="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "#standings" : "/#standings")" onclick="navigateToSection('standings', event)">
								<i class="bi bi-table d-lg-none me-1"></i>
								<span class="d-none d-lg-inline">Standings</span>
								<span class="d-lg-none">Standings</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark fw-medium px-2 px-lg-3" href="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "#scorers" : "/#scorers")" onclick="navigateToSection('scorers', event)">
								<i class="bi bi-trophy-fill d-lg-none me-1"></i>
								<span class="d-none d-lg-inline">Scorers</span>
								<span class="d-lg-none">Scorers</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark fw-medium px-2 px-lg-3" href="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "#matches" : "/#matches")" onclick="navigateToSection('matches', event)">
								<i class="bi bi-calendar-event d-lg-none me-1"></i>
								<span class="d-none d-lg-inline">Matches</span>
								<span class="d-lg-none">Matches</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark fw-medium px-2 px-lg-3" href="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "#shop" : "/#shop")" onclick="navigateToSection('shop', event)">
								<i class="bi bi-bag d-lg-none me-1"></i>
								<span class="d-none d-lg-inline">Shop</span>
								<span class="d-lg-none">Shop</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
	<footer class="flex text-center footer text-muted">
		<div class="container">
			&copy; 2025 - Victory FC
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>